<Window x:Class="EstoqueRolos.Views.RoloDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dados da Bobina"
        Height="560" Width="742"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        ResizeMode="NoResize"
        Icon="/3459929.png">

    <Window.Resources>
        <!-- Estilo de TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- BotÃ£o primÃ¡rio -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="4,0,4,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- BotÃ£o secundÃ¡rio -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Border Background="#1A1A1A"
                CornerRadius="16"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="0"
                                  Opacity="0.6"
                                  Color="#2563EB"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TÃ­tulo -->
                <TextBlock Text="ðŸ“± Calcular Metragem"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"/>

                <!-- FormulÃ¡rio -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <Label Content="R" Foreground="White" Width="18" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txtCode" Width="90" HorizontalAlignment="Left"/>

                    <Label Content="r" Foreground="White" Width="18" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txtDescricao" Width="90" HorizontalAlignment="Left"/>

                    <Label Content="E0" Foreground="White" Width="25" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txtMM" Width="90" HorizontalAlignment="Left"/>

                    <Label Content="E" Foreground="White" Width="18" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txtMOQ" Width="90" HorizontalAlignment="Left"/>

                    <Label Content="M (mÃ¡x)" Foreground="White" Width="52" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txtEstoque" Width="90" HorizontalAlignment="Left"/>
                    
                </StackPanel>

                <!-- BotÃµes -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Salvar"
                            Click="Salvar_Click"
                            Style="{StaticResource PrimaryButton}"/>
                    <Button Content="Cancelar"
                            Click="Cancelar_Click"
                            Style="{StaticResource SecondaryButton}"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
