<Window x:Class="EstoqueRolos.Views.RoloDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rolo" Height="420" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource Bg}"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dados do Rolo" FontSize="18" FontWeight="Bold" Foreground="{StaticResource Primary}"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <Label>Código</Label>
            <TextBox x:Name="txtCode"/>

            <Label>Descrição</Label>
            <TextBox x:Name="txtDescricao"/>

            <Label>Milimetragem</Label>
            <TextBox x:Name="txtMM"/>

            <Label>MOQ (m)</Label>
            <TextBox x:Name="txtMOQ"/>

            <Label>Estoque (m)</Label>
            <TextBox x:Name="txtEstoque"/>

            <Label>Metragem WIP</Label>
            <TextBox x:Name="txtWIP"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Salvar" Width="100" Click="Salvar_Click"/>
            <Button Content="Cancelar" Width="100" Background="#E5E7EB" Foreground="#111" Click="Cancelar_Click" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
