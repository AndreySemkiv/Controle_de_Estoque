<Window x:Class="EstoqueRolos.Views.RoloDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rolo" Height="320" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource Bg}"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dados do Rolo" FontSize="18" FontWeight="Bold" Foreground="{StaticResource Primary}"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <Label>Id do Rolo</Label>
            <TextBox x:Name="txtIdRolo"/>

            <Label>Milimetragem (mm)</Label>
            <TextBox x:Name="txtMM"/>

            <Label>Metragem Dispon√≠vel (m)</Label>
            <TextBox x:Name="txtMetragem"/>

            <Label>Status (WIP)</Label>
            <ComboBox x:Name="cbWip">
                <ComboBoxItem Content="Estoque" IsSelected="True"/>
                <ComboBoxItem Content="Producao"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Salvar" Width="100" Click="Salvar_Click"/>
            <Button Content="Cancelar" Width="100" Background="#E5E7EB" Foreground="#111" Click="Cancelar_Click" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
