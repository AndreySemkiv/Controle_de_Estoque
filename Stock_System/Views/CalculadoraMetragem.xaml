<Window x:Class="EstoqueRolos.Views.CalculadoraMetragem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calcular Metragem DisponÃ­vel"
        Height="560" Width="742"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        ResizeMode="NoResize"
        Icon="/3459929.png">

    <Window.Resources>
        <!-- Estilo de TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- BotÃ£o primÃ¡rio -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="4,0,4,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- BotÃ£o secundÃ¡rio -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Border Background="#1A1A1A"
                CornerRadius="16"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="0"
                                  Opacity="0.6"
                                  Color="#2563EB"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ðŸ“± Calcular Metragem"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"/>





                <!-- FormulÃ¡rio -->
                <StackPanel Grid.Row="1" Margin="0,88,0,0">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
                        <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                            <Label Content="R" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBox x:Name="txtR" Width="90" HorizontalAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="r" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBox x:Name="txtr" Width="90" HorizontalAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
                        <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                            <Label Content="E0" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBox x:Name="txtE0" Width="90" HorizontalAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Profundidade" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBox x:Name="txtE" Width="90" HorizontalAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="50,0,0,12">
                        <Label Content="Standard Pack" Foreground="White" Width="92" FontWeight="Bold"/>
                        <TextBox x:Name="txtMmax" Width="90" HorizontalAlignment="Left" PreviewTextInput="NumberValidationTextBox"/>
                    </StackPanel>

                    <!-- BotÃµes + Resultado lado a lado -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="43,5,0,0">

                        <Button Content="Calcular"
                                Click="Calcular_Click"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,10,0" Width="100" Height="32"/>
                        <TextBox x:Name="txtResultado" Width="150" IsReadOnly="True" Margin="50,0,10,0"/>
                        <Button Content="Copiar" Click="Copiar_Click" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>

                </StackPanel>


                <!-- BotÃ£o Cancelar -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancelar"
                            Click="Cancelar_Click"
                            Style="{StaticResource SecondaryButton}"
                            Margin="10,0,0,0"/>
                </StackPanel>

            </Grid>
        </Border>

        <Image Source="/Imagens/Bobina.png"
       Width="346"
       HorizontalAlignment="Left"
       Margin="289,115,0,154"/>

        <TextBlock Text="RepresentaÃ§Ã£o"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White" Margin="374,82,-374,285"/>

        <TextBlock Text="Valores PadrÃ£o"
                           FontSize="15"
                           Foreground="White" HorizontalAlignment="Left" Margin="57,76,0,294" Width="98"/>


        <ComboBox Name="myComboBox" HorizontalAlignment="Right" VerticalAlignment="Top" Width="200" Height="30" Margin="0,98,472,0" SelectionChanged="myComboBox_SelectionChanged">
            <ComboBoxItem Content="Vazio/Nenhum Selecionado" />
            <ComboBoxItem Content="Bobina de 200mm" />
            <ComboBoxItem Content="Bobina de 250mm" />
            <ComboBoxItem Content="Bobina de 355mm" />
        </ComboBox>

    </Grid>

</Window>
