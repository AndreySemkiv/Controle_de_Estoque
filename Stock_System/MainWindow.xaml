<Window x:Class="EstoqueRolos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controle de Estoque - Rolos"
        Height="600" Width="980"
        Background="{StaticResource Bg}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Primary}" Padding="16,12">
            <DockPanel>
                <TextBlock Text="CONTROLE DE ESTOQUE" Foreground="White" FontSize="22" FontWeight="Bold" DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Atualizar" Click="Atualizar_Click"/>
                    <Button Content="Novo Rolo" Click="Novo_Click"/>
                    <Button Content="Editar Selecionado" Click="Editar_Click"/>
                    <Button Content="Excluir Selecionado" Background="#EF4444" Click="Excluir_Click"/>
                    <Button Content="Exportar Excel" Background="#10B981" Click="Exportar_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Margin="0,0,0,10">
                <TextBox x:Name="txtBusca" Width="280" />
                <Button Content="Buscar" Click="Buscar_Click"/>
                <Button Content="Limpar" Background="#E5E7EB" Foreground="#111" Click="LimparBusca_Click"/>
            </DockPanel>

            <DataGrid x:Name="dgRolos"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      Margin="0,6,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Rolo" Binding="{Binding IdRolo}" Width="150"/>
                    <DataGridTextColumn Header="MM" Binding="{Binding Milimetragem}" Width="100"/>
                    <DataGridTextColumn Header="Metragem DisponÃ­vel (m)" Binding="{Binding MetragemDisponivel}" Width="180"/>
                    <DataGridTextColumn Header="WIP" Binding="{Binding WIP}" Width="130"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
